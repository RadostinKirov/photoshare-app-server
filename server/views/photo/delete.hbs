<main>
    <form class="theater-form" action="/play/delete/{{dataPlay._id}}" method="POST">
        
        <h1>Delete Theater</h1>  
        </div>

        <div>
            <label for="title">Theater Title:</label>
            <input type="text" placeholder="Theater name" name="title" value="{{dataPlay.title}}" disabled>
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea placeholder="Description" name="description" disabled>{{dataPlay.description}}</textarea>
        </div>
        <div>
            <label for="imageUrl">Image url:</label>
            <input type="text" placeholder="Image Url" name="imageUrl" value="{{dataPlay.imageUrl}}" disabled>
        </div>
        <div class="check">
            <input type="checkbox" id="check-box" name="public" {{#if dataPlay.isPublic}}checked{{/if}} disabled>
            <label for="check-box">Public</label>
        </div>
        <button class="btn" type="submit">Delete</button>
              <a class="deleteConfirm" href="/play/details/{{dataPlay._id}}">Back</a>
    </form>
</main>