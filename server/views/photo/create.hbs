<main>
    <form class="theater-form" action="/photo/create/{{dataPhoto._id}}" method="POST">
        <h1>Create Theater</h1>
        <div>
            <label for="title">Theater Title:</label>
            <input type="text" placeholder="Theater name" name="title" value="{{dataPhoto.title}}">
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea placeholder="Description" name="description">{{dataPhoto.description}}</textarea>
        </div>
        <div>
            <label for="imageUrl">Image url:</label>
            <input type="text" placeholder="Image Url" name="imageUrl" value="{{dataPhoto.imageUrl}}">
        </div>
        <div class="check">
            <input type="checkbox" id="check-box" name="public" {{#if dataPhoto.isPublic}}checked{{/if}}>
            <label for="check-box">Public</label>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</main>